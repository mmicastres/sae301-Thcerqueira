{% extends "index.html.twig" %}


{% block section %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form method="post" action="index.php" class="well" id="form-ajout">
        <fieldset>
            <h3 class="text-center mb-4">Ajouter un contexte</h3>
            <div class="form-group mb-4">
            <label for="semestre">Semestre</label>
            <select name="semestre" type="semestre" id="semestre" class="form-select form-select mb-4">
              <option value="S1">S1</option>
              <option value="S2">S2</option> 
              <option value="S3">S3</option> 
              <option value="S4">S4</option> 
              <option value="S5">S5</option> 
              <option value="S6">S6</option> 
            </select>
          </div>
          <div class="form-group mb-4">
            <label for="identifiant">Identifiant</label>
            <input type="text" id="identifiant" class="form-control" name="identifiant" required placeholder="Entrez un identifiant ex : SAE 101" />
          </div>
          <div class="form-group mb-4">
            <label for="matiere">Matiere</label>
            <input type="text" id="matiere" class="form-control" name="matiere" required placeholder="Entrez une matiere" />
          </div>
          <input type="submit" class="btn btn-primary btn-dark w-100 mt-2" name="valider_ajoutcontexte" value="valider"/>
        </fieldset>
      </form>
    </div>
  </div>
</div>

{% endblock %}